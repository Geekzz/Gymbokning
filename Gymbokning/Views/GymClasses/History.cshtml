@model IEnumerable<Gymbokning.Models.GymClass>

@{
    ViewData["Title"] = "History - Attended Gym Classes";
}

<h1>Your Attended Gym Classes (History)</h1>

@if (!Model.Any())
{
    <p>You haven't attended any gym classes yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Start Time</th>
                <th>Duration</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.StartTime</td>
                    <td>@item.Duration</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
